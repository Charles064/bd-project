<h1>Listing all Products</h1>

<h2><%= link_to 'Add new product', new_product_path %></h2>

<table>
        <tr>
            <th>Name</th>
            <th>Price</th>
            <th>Stock</th>
            <th>Perishable</th>
            <th>Expire On</th>
            <th></th>
        </tr>
        
    <% @all_products.each do |pd| %>
        <tr>
            <td><%= pd.name %></td>
            <td><%= pd.price %></td>
            <td><%= pd.in_stock %></td>
            <td><%= pd.perish %></td>
            <td><% from_time = Date.today %><%= distance_of_time_in_words(from_time, pd.xp_date) %></td>
            <td><%= link_to 'Edit', edit_product_path(pd) %></td>
            <td><%= link_to 'Show', product_path(pd) %></td>
            <td><%= link_to 'Delete', product_path(pd), method: :delete, data: {confirm: "Are you sure?"} %></td>
        </tr>
    <% end %>
</table>