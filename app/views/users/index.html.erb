<h1>Showing all users</h1>

<table>
        <tr>
            <th>Name</th>
            <th>Username</th>
            <th>Email</th>
            <th>Registered</th>
            
        </tr>
        
    <% @users.each do |u| %>
        <tr>
            <td><%= u.names %> <%= u.lastname_1 %> <%= u.lastname_2 %></td>
            <td><%= u.username %></td>
            <td><%= u.email %></td>
            <td><%= time_ago_in_words(u.created_at) %> ago</td>
            <td><%= link_to 'Edit', edit_user_path(u) %></td>
            <td><%= link_to 'Show', user_path(u) %></td>
            <td><%= link_to 'Delete', user_path(u), method: :delete, data: {confirm: "Are you sure?"} %></td>
        </tr>
    <% end %>
</table>
<p>
    <%= link_to "Create User", new_user_path%>
</p>